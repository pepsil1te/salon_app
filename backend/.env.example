# Database Configuration
# Neon Serverless Postgres (вариант 1)
DATABASE_URL=postgresql://username:password@endpoint.eu-central-1.aws.neon.tech/dbname?sslmode=require

# Альтернативный формат для Neon (вариант 2)
# DATABASE_URL=postgres://username:password@endpoint.eu-central-1.aws.neon.tech/dbname

# Локальная PostgreSQL база (для тестирования)
DATABASE_URL=postgresql://username:password@localhost:5432/salon_db

# Флаг инициализации базы данных (установите true только для первого запуска или при обновлении схемы)
INIT_DATABASE=false

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEB_APP_URL=https://your-domain.com

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging Configuration
LOG_LEVEL=debug 